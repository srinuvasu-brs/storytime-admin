<%- include('./partials/header.ejs') %>
  <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Edit User</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="/admin/users">Users</a></li>
                            <li class="breadcrumb-item active">Edit User</li>
                        </ol>
                        <div class="row">
                            <div class="col-lg-12">
                                <!-- Default Bootstrap Form Controls-->
                                <div id="default">
                                    <div class="card mb-4">
                                        <div class="card-header">Update User</div>
                                        <div class="card-body">
                                            <!-- Component Preview-->
                                            <div class="sbp-preview">
                                                <div class="sbp-preview-content">
                                                  <div class="row">
                                                    <form method="post" action="/create-team-lead">
                                                        <div class="mb-3">
                                                            <label for="fname">First Name</label>
                                                            <input name="fname" class="form-control" id="fname" type="text" placeholder="First Name"  value="<%= user.first_name %>">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="fname">Last Name</label>
                                                            <input name="lname" class="form-control" id="lname" type="text" placeholder="Last Name"  value="<%= user.last_name %>">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="fname">Email</label>
                                                            <input name="email" class="form-control" id="email" type="email" placeholder="Email"  value="<%= user.email %>">
                                                        </div>

                                                        <div class="mb-3">
                                                            <!-- <input class="btn btn-primary" type="submit" value="Submit"> -->
                                                        </div>
                                                    </form>
                                                  </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
  </div>
<%- include('./partials/footer.ejs') %>
